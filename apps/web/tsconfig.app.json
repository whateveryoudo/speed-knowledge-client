{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.tsx", "src/types/**/*.d.ts", "packages/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "baseUrl": ".",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "jsx": "preserve", // 添加这行：保留 JSX 语法，让 Vite 插件处理
    "paths": {
      // "@/*": ["../../speed-components/src/*"],
      "@/*": ["../../speed-tiptap-editor/src/*"],
      "#sk-web/*": ["./src/*"]
    },
  },
}
